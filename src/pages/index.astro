---
import Layout from "@/layouts/Layout.astro"

import About from "@/components/sections/About.astro"
import Education from "@/components/sections/Education.astro"
import Experience from "@/components/sections/Experience.astro"
import Hero from "@/components/sections/Hero.astro"
import Projects from "@/components/sections/Projects.astro"
import Skills from "@/components/sections/Skills.astro"
import KeyboardManager from "@/components/KeyboardManager.astro"

import { basics as basics_es } from "@cv"
import { basics as basics_en } from "@cv_en"

const language = "es";

const basics = language === "es" ? basics_es : basics_en;
const { name, label } = basics;


---

<Layout title={`${name} - ${label}`}>
  <main>
    <Hero />
    <About />
    <Experience />
    <Education />
    <Projects />
    <Skills />
  </main>

  <KeyboardManager />
</Layout>

<script>
  console.log('%c This is reserved for awesome tech recruiters! If you are looking for a great and awesome developer, please contact me. :) ', 'background: #101010; color: #fff; font-size:16px;');
</script>

<style>
  main {
    padding: 4rem;
    margin: auto;
    width: 100%;
  }

  @media (width <= 700px) {
    main {
      padding: 2rem;
    }
  }
</style>
